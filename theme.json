{
  "name": "Uninstalled Game Icon",
  "author": "Gubas",
  "version": "v1.1",
  "description": "Adds a little install icon to uninstalled games for Big Picture View.",
  "target": "Library",
  "manifest_version": 9,
  "inject": {
    "shared.css": ["bigpicture"]
  },
  "patches": {
    "Icon Style": {
      "type": "dropdown",
			"default": "Empty",
      "values": {
          "Empty": {
              "--install-icon": [
                "url(\"/themes_custom/Uninstalled%20Game%20Icon/SVGs/installEmpty.svg\")",
                "bigpicture"
              ]
          },
          "Full": {
              "--install-icon": [
                "url(\"/themes_custom/Uninstalled%20Game%20Icon/SVGs/installFull.svg\")",
                "bigpicture"
              ]
          }
      }
    },
    "Badge Style": {
      "type": "dropdown",
			"default": "Deck Verified",
      "values": {
          "Family Copies": {
              "--blur": [
                "0",
                "bigpicture"
              ],
              "--outline": [
                "1",
                "bigpicture"
              ],
              "--opacity": [
                ".3",
                "bigpicture"
              ],
              "--padding": [
                "1",
                "bigpicture"
              ]
          },
          "Deck Verified": {
              "--blur": [
                "1",
                "bigpicture"
              ],
              "--outline": [
                "0",
                "bigpicture"
              ],
              "--opacity": [
                ".7",
                "bigpicture"
              ],
              "--padding": [
                "2",
                "bigpicture"
              ]
          }
      }
    },
    "Show When Focused": {
      "type": "checkbox",
      "default": "Yes",
      "values": {
          "No": {
            "--focus": [
              "0",
              "bigpicture"
            ]
          },
          "Yes": {
            "--focus": [
              "1",
              "bigpicture"
            ]
          }
      }
    },
    "Show When Unfocused": {
      "type": "checkbox",
      "default": "Yes",
      "values": {
          "No": {
            "--unfocus": [
              "0",
              "bigpicture"
            ]
          },
          "Yes": {
            "--unfocus": [
              "1",
              "bigpicture"
            ]
          }
      }
    }
  }
}